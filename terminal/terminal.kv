<TerminalPage>
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "horizontal"
            canvas.before:
                Color:
                    rgba: (60/255,179/255,113/255, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 25
            Label:
                text: "Cicada"
                font_size: 16
                size_hint_x: 0.8
                halign: "center"
            Label:
                text: "user"
                font_size: 16
                size_hint_x: 0.2
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 2.3
                TabbedPanel:
                    do_default_tab: False
                    TabbedPanelItem:
                        text: "Products"
                        background_normal: ""
                        background_color: (145/255, 180/255, 150/255, 1)
                        BoxLayout:
                            orientation: "vertical"
                            padding: 20
                            canvas.before:
                                Color:
                                    rgba: (47/255,79/255,79/255, 1)
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            RecycleView:
                                id: product_view
                                viewclass: "CustomButton"
                                RecycleGridLayout:
                                    cols: 4
                                    default_size: None, dp(56)
                                    default_size_hint: 1, None
                                    size_hint_y: None
                                    height: self.minimum_height
                                    spacing: 10

                    TabbedPanelItem:
                        text: "Category"
                        background_normal: ""
                        background_color: (145/255, 180/255, 150/255, 1)
                    TabbedPanelItem:
                        text: "Others"
                        background_normal: ""
                        background_color: (145/255, 180/255, 150/255, 1)
                    TabbedPanelItem:
                        text: "Misc"
                        background_normal: ""
                        background_color: (145/255, 180/255, 150/255, 1)

            BoxLayout:
                orientation:"vertical"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "vertical"
                        spacing: 15
                        padding: 15, 15
                        
                        Label:
                            text: "Checkout"
                            color: 0,0,0,1
                        Label:
                            text: "iiwm"
                            color: 0,0,0,1
                        Label:
                            text: "iiwm"
                            color: 0,0,0,1
                        Label:
                            text: "iiwm"
                            color: 0,0,0,1
                        Label:
                            text: "iiwm"
                            color: 0,0,0,1
                        Button:
                            id: check_btn
                            text: "checkout"
                            size_hint_y: None
                            height: 50
                            background_normal: ""
                            background_color: (60/255,179/255,113/255, 1)

                            
